<?xml version="1.0" encoding="UTF-8"?>
<taxonomy xmlns="http://www.tei-c.org/ns/1.0"
          xml:id="ParlaMint-taxonomy-politicalOrientation"
          xml:lang="mul">
   <desc xml:lang="en">
      <term>Political orientation of political parties and parliamentary groups</term>
   </desc>
   <desc xml:lang="gl">
      <term>Orientación política dos partidos políticos e grupos parlamentarios</term>
   </desc>
   <category xml:id="orientation.L">
      <catDesc xml:lang="en">
         <term>Left</term>
      </catDesc>
      <catDesc xml:lang="gl">
         <term>Esquerda</term>
      </catDesc>
   </category>
   <category xml:id="orientation.C">
      <catDesc xml:lang="en">
         <term>Centre</term>
      </catDesc>
      <catDesc xml:lang="gl">
         <term>Centro</term>
      </catDesc>
   </category>
   <category xml:id="orientation.R">
      <catDesc xml:lang="en">
         <term>Right</term>
      </catDesc>
      <catDesc xml:lang="gl">
         <term>Dereita</term>
      </catDesc>
   </category>
   <category xml:id="orientation.FL">
      <catDesc xml:lang="en">
         <term>Far-left</term>
      </catDesc>
      <catDesc xml:lang="gl">
         <term>Extrema esquerda</term>
      </catDesc>
   </category>
   <category xml:id="orientation.FR">
      <catDesc xml:lang="en">
         <term>Far-right</term>
      </catDesc>
      <catDesc xml:lang="gl">
         <term>Extrema dereita</term>
      </catDesc>
   </category>
   <category xml:id="orientation.CL">
      <catDesc xml:lang="en">
         <term>Centre-left</term>
      </catDesc>
      <catDesc xml:lang="gl">
         <term>Centroesquerda</term>
      </catDesc>
   </category>
   <category xml:id="orientation.CR">
      <catDesc xml:lang="en">
         <term>Centre-right</term>
      </catDesc>
      <catDesc xml:lang="gl">
         <term>Centrodereita</term>
      </catDesc>
   </category>
   <category xml:id="orientation.CCL">
      <catDesc xml:lang="en">
         <term>Centre to centre-left</term>
      </catDesc>
      <catDesc xml:lang="gl">
         <term>Centro-Centroesquerda</term>
      </catDesc>
   </category>
   <category xml:id="orientation.CCR">
      <catDesc xml:lang="en">
         <term>Centre to centre-right</term>
      </catDesc>
      <catDesc xml:lang="gl">
         <term>Centro-Centrodereita</term>
      </catDesc>
   </category>
   <category xml:id="orientation.CLL">
      <catDesc xml:lang="en">
         <term>Centre-left to left</term>
      </catDesc>
      <catDesc xml:lang="gl">
         <term>Centroesquerda-Esquerda</term>
      </catDesc>
   </category>
   <category xml:id="orientation.CRR">
      <catDesc xml:lang="en">
         <term>Centre-right to right</term>
      </catDesc>
      <catDesc xml:lang="gl">
         <term>Centrodereita-Dereita</term>
      </catDesc>
   </category>
   <category xml:id="orientation.LLF">
      <catDesc xml:lang="en">
         <term>Left to far-left</term>
      </catDesc>
      <catDesc xml:lang="gl">
         <term>Esquerda-Extrema esquerda</term>
      </catDesc>
   </category>
   <category xml:id="orientation.RRF">
      <catDesc xml:lang="en">
         <term>Right to far-right</term>
      </catDesc>
      <catDesc xml:lang="gl">
         <term>Dereita-Extrema dereita</term>
      </catDesc>
   </category>
   <category xml:id="orientation.BT">
      <catDesc xml:lang="en">
         <term>Big tent</term>: <ref target="https://en.wikipedia.org/wiki/Big_tent">Big tent</ref> or catch-all refers to political parties that have members covering a broad spectrum of beliefs.</catDesc>
      <catDesc xml:lang="gl">
         <term>Partido multicomprensivo</term>: <ref target="https://en.wikipedia.org/wiki/Big_tent">Partido multicomprensivo ("big tent", en inglés)</ref>
         designa os partidos políticos cuxos membros cobren unha ampla gama de crenzas.
      </catDesc>
   </category>
   <category xml:id="orientation.NP">
      <catDesc xml:lang="en">
         <term>Nonpartisanism</term>: <ref target="https://en.wikipedia.org/wiki/Nonpartisanism">Nonpartisanism</ref> refers to a political stance that does not agree with the current political party system.</catDesc>
      <catDesc xml:lang="gl">
         <term>Apartidismo</term>: <ref target="https://en.wikipedia.org/wiki/Nonpartisanism">Apartidismo</ref>
         designa a ausencia de afiliación a unha organización política ou o desacordo co sistema de partidos políticos actual.
      </catDesc>
   </category>
   <category xml:id="orientation.PP">
      <catDesc xml:lang="en">
         <term>Pirate Party</term>: <ref target="https://en.wikipedia.org/wiki/Pirate_Party">Pirate Party</ref> refers to political parties that support civil rights, direct democracy, encourage innovation and creativity, free sharing of knowledge, information privacy, free speech, anti-corruption, net neutrality and oppose mass surveillance, censorship and Big Tech.</catDesc>
      <catDesc xml:lang="gl">
         <term>Partido Pirata</term>: <ref target="https://gl.wikipedia.org/wiki/Partido_Pirata">Partido Pirata</ref>
         designa aqueles partidos políticos que apoian os dereitos civís, a democracia directa, o acceso libre ao coñecemento, o dereito á privacidade tanto en Internet como na vida real, e a transparencia pública.
      </catDesc>
   </category>
   <category xml:id="orientation.SI">
      <catDesc xml:lang="en">
         <term>Single Issue Politics</term>: <ref target="https://en.wikipedia.org/wiki/Single-issue_politics">Single Issue Politics</ref> refers to a political stance that is based on one essential policy area or idea.</catDesc>
      <catDesc xml:lang="gl">
         <term>Política unidireccional</term>: <ref target="https://en.wikipedia.org/wiki/Single-issue_politics">Política unidireccional</ref>
         designa a posición política baseada nunha área ou idea política esencial.
      </catDesc>
   </category>
   <category xml:id="orientation.SY">
      <catDesc xml:lang="en">
         <term>Syncretic politics</term>: <ref target="https://en.wikipedia.org/wiki/Syncretic_politics">Syncretic politics</ref> refers to politics that combine elements from across the conventional left–right political spectrum.</catDesc>
      <catDesc xml:lang="gl">
         <term>Sincretismo político</term>: <ref target="https://en.wikipedia.org/wiki/Syncretic_politics">Sincretismo político</ref>
         designa a posición política que combina elementos asociados tanto coa esquerda como coa dereita.
      </catDesc>
   </category>
</taxonomy>
