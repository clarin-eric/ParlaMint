      TYPE "UNIQUE"
    }
    ATTRIBUTE senti_3 {
      DEFAULTVALUE "-"
    }
    ATTRIBUTE senti_6 {
      DEFAULTVALUE "-"
    }
    ATTRIBUTE senti_n {
      DEFAULTVALUE "-"
