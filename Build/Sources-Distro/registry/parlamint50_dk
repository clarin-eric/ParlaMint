      DEFAULTVALUE "-"
      TEXTBOXLENGTH 10
    }
    DISPLAYTAG 0
    DISPLAYBEGIN "%(speaker_id): "
    DISPLAYEND ""
}
STRUCTURE p {
    ATTRIBUTE id {
      TYPE "UNIQUE"
    }
    ATTRIBUTE lang
    DISPLAYTAG 0
    DISPLAYBEGIN ""
    DISPLAYEND " ¶ "
}
STRUCTURE s {
    ATTRIBUTE id {
