      TYPE "UNIQUE"
    }
    ATTRIBUTE speaker_id {
      DEFAULTVALUE "-"
    }
    ATTRIBUTE speaker_name {
      DEFAULTVALUE "-"
      MULTISEP "÷"
    }
    ATTRIBUTE speaker_role {
      DEFAULTVALUE "-"
    }
    ATTRIBUTE speaker_mp {
      DEFAULTVALUE "-"
    }
    ATTRIBUTE speaker_minister {
      DEFAULTVALUE "-"
    }
