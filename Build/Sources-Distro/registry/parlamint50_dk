}
STRUCTURE name {
    ATTRIBUTE type
    DISPLAYTAG 0
    DISPLAYBEGIN "[%(type):"
    DISPLAYEND "]"
}
STRUCTURE note {
    ATTRIBUTE type
    ATTRIBUTE content
    DISPLAYTAG 0
    DISPLAYBEGIN "[%(type): %(content)"
    DISPLAYEND "]"
}
STRUCTURE g {
    DISPLAYTAG 0
    DISPLAYBEGIN "_EMPTY_"
}

ATTRIBUTE word
