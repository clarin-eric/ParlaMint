        MULTIVALUE yes
        MULTISEP "|"
    }
    ATTRIBUTE term
    ATTRIBUTE session {
      TEXTBOXLENGTH 4
    }
    ATTRIBUTE meeting {
      TEXTBOXLENGTH 4
    }
    ATTRIBUTE sitting {
      TEXTBOXLENGTH 4
    }
    ATTRIBUTE agenda {
      TEXTBOXLENGTH 4
    }
    ATTRIBUTE date
