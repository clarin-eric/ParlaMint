  MULTIVALUE yes
  MULTISEP " "
}
ATTRIBUTE usas_glosses {
  TYPE "MD_MGD"
  LABEL "USAS glosses"
  MULTIVALUE yes
  MULTISEP "|"
}
    
ATTRIBUTE id {
    TYPE "MD_MGD"
